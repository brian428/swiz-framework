<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:swiz="http://swiz.swizframework.org"
		 xmlns:view="integration.application.module.view.*"
		 width="100%" height="100%">
	
	<fx:Script>
		<![CDATA[
			import mx.events.ModuleEvent;
			import integration.application.module.config.Beans;
			import integration.application.module.event.SimpleModuleEvent;
			
			public var moduleEventHandlerRan : Boolean = false;
			public var parentAppEventHandlerRan : Boolean = false;
			
			[Dispatcher]
			public var swizDispatcher : IEventDispatcher;
			
			[EventHandler( event="SimpleModuleEvent.MODULE_EVENT" )]
			public function handleSimpleModuleEvent() : void 
			{
				moduleEventHandlerRan = true;
				dispatchEvent( new Event( SimpleModuleEvent.MODULE_EVENT_COMPLETE, true ) );
			}
			
			[EventHandler( event="SimpleTestEvent.GENERIC_EVENT" )]
			public function handleParentAppEvent() : void 
			{
				parentAppEventHandlerRan = true;
			}
			
			public function triggerModuleEvent() : void
			{
				dispatchEvent( new SimpleModuleEvent( SimpleModuleEvent.MODULE_EVENT ) );
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<swiz:SwizConfig id="mySwizConfig"
						 eventPackages="integration.application.event.*,integration.application.module.event.*"
						 viewPackages="integration.application.module.view.*" />
		
		<swiz:Swiz id="mySwiz" beanProviders="{[Beans]}" config="{mySwizConfig}" />
	</fx:Declarations>
	
	<view:SimpleModuleCanvas id="simpleModuleCanvas" />
	
</mx:Module>
