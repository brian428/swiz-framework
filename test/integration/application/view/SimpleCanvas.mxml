<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:fx="http://ns.adobe.com/mxml/2009" width="100%" height="100%">
	
	<fx:Metadata>
		[Event( name="genericEvent", type="flash.events.Event")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import integration.application.control.SimpleController;
			import integration.application.event.SimpleTestEvent;
			
			private var _controller : SimpleController;
			
			[Inject( source="simpleController" )]
			public var namedController : Object;
			
			[Inject( source="simpleController.name" )]
			[Bindable]
			public var controllerName : String;
			
			[Inject( source="simpleController.name", bind="true" )]
			[Bindable]
			public var bindingControllerName : String;
			
			[Inject( source="simpleController.name", bind="true", twoWay="true" )]
			[Bindable]
			public var twoWayBindingControllerName : String;
			

			public function get controller():SimpleController
			{
				return _controller;
			}
			
			[Inject]
			public function set controller(value:SimpleController):void
			{
				_controller = value;
			}

			public function dispatchSimpleEvent() : void
			{
				var newEvent : SimpleTestEvent = new SimpleTestEvent( SimpleTestEvent.GENERIC_EVENT );
				newEvent.data = SimpleTestEvent.GENERIC_EVENT;
				dispatchEvent( newEvent );
			}
			
		]]>
	</fx:Script>
	
</mx:Canvas>
