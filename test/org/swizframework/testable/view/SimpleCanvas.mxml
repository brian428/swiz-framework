<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">
	
	<mx:Metadata>
		[Event("genericEvent")]
	</mx:Metadata>
	
	<mx:Script>
		<![CDATA[
			import org.swizframework.testable.control.SimpleController;
			import org.swizframework.testable.event.SimpleTestEvent;
			
			[Inject]
			public var controller : SimpleController;
			
			[Inject("simpleController")]
			public var namedController : Object;
			
			[Inject("controllerName")]
			[Bindable]
			public var controllerName : String;
			
			[Inject(source="simpleController.name", destination="label")]
			
			public function dispatchSimpleEvent() : void
			{
				var newEvent : SimpleTestEvent = new SimpleTestEvent( SimpleTestEvent.GENERIC_EVENT );
				newEvent.data = SimpleTestEvent.GENERIC_EVENT;
				dispatchEvent( newEvent );
			}
			
		]]>
	</mx:Script>
	
</mx:Canvas>
